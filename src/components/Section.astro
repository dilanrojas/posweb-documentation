---
const { id } = Astro.props
---

<section class=`section flow` id={id}>
  <slot />
</section>

<style is:global>
  .section {
    scroll-margin-top: 5em;
    font-size: 1.15em;
    animation: zoomIn .2s forwards;
    font-weight: 500;
  }

  .section:has(h1) {
    font-size: 1.2em;
  }

  .section h1 {
    font-size: 2.1em;
    margin-bottom: -.25em!important;
    text-wrap: wrap;
  }

  @media (width <= 370px) {
    .section h1 {
      font-size: 1.9em;
    }
  }

  .section h2 {
    font-size: 1.5em;
  }

  .section h1, h2, h3 {
    font-weight: 700;
  }

  .section h2, h3 {
    margin-bottom: 1.2em;
  }

  .section h3 {
    font-size: 1.2em;
  }

  .text-link {
    color: var(--accent);
    font-weight: 600;
  }
  
  .text-link:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
  }
</style>